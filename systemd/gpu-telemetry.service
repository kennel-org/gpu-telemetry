[Unit]
Description=GPU Telemetry Collector (gpu-telemetry)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=%h/projects/gpu-telemetry
EnvironmentFile=%h/projects/gpu-telemetry/.env
ExecStart=%h/projects/gpu-telemetry/bin/collect_loop.sh ${SAMPLE_INTERVAL_SEC}
Restart=always
RestartSec=3
Environment=LC_ALL=C.UTF-8
Environment=LC_TIME=C.UTF-8

[Install]
WantedBy=default.target
